<resources>

    <!-- Base application theme. -->

    <style name="SimpleProgressBar.ProgressBar.Horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <!--
        Disabled for correct behavior on Android 4.x, see
        https://github.com/android/platform_frameworks_base/commit/911743652b597057a1bd7ef8a921e9ff8dce0f4a#diff-149f45c5ff2d3185bb79688ba17bc432L536
        <item name="android:progressDrawable">@null</item>
        -->
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="SimpleProgressBar.ProgressBar" parent="android:Widget.ProgressBar">

        <!-- We have support for determinate circular progress drawable. -->
        <item name="android:indeterminateOnly">false</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_custom</item>
        <item name="android:progressDrawable">@drawable/circular</item>
        <item name="android:secondaryProgress">100</item>
        <item name="android:progress">0</item>
        <item name="android:max">100</item>
    </style>

    <style name="SimpleProgressBar.ProgressBar.Large">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="SimpleProgressBar.ProgressBar.Small">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

</resources>
